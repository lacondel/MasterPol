<Page x:Class="MasterPol.Pages.Authorization.PageAuthorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MasterPol.Pages.Authorization"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authorization">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Введите логин:"/>
            <TextBox x:Name="tbLogin" Width="240"/>
            <Label Content="Введите пароль:"/>
            <PasswordBox x:Name="pbPassword" Width="240"/>
            <Button x:Name="btnEnter" Content="Войти" Margin="0 5 0 0" Click="btnEnter_Click"/>
            <Button x:Name="btnRegistration" Content="Зарегистрироваться" Margin="0 5 0 0" Click="btnRegistration_Click"/>
        </StackPanel>
    </Grid>
</Page>
