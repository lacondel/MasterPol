<Page x:Class="MasterPol.Pages.Authorization.PageRegistration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MasterPol.Pages.Authorization"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registration">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Введите логин:"/>
            <TextBox x:Name="tbRegLogin" Width="240"/>
            <Label Content="Введите пароль:"/>
            <PasswordBox x:Name="pbRegPass" Width="240" PasswordChanged="rpChanged"/>
            <Label Content="Повторите пароль:"/>
            <PasswordBox x:Name="pbRegPassRepeat" Width="240" PasswordChanged="rprChanged"/>
            <Button x:Name="btnReg" Content="Зарегистрироваться" Width="240" Margin="0 5 0 0" Click="btnReg_Click"/>
            <Button x:Name="btnBack" Content="Вернуться" Width="240" Margin="0 5 0 0" Click="btnBack_Click"/>
        </StackPanel>
    </Grid>
</Page>
